---
import BaseHead from '@components/BaseHead.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';

const { title, description, image, type, section, tags, datePublished, dateModified, prev, next } =
	Astro.props;
---

<html lang="en" dir="ltr">
	<head>
		<BaseHead
			{title}
			{description}
			{image}
			{type}
			{section}
			{tags}
			{datePublished}
			{dateModified}
			{prev}
			{next}
		/>
	</head>
	<body>
		{!(Astro.url.pathname === '/about/resume') && <Header />}
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
